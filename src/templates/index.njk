    <main role="main">
      {% if file.data.title %}
        <h1 class="title">{{ file.data.title }}</h1>
      {% endif %}

      {{ contents | safe }}
    </main>

    <aside id="right">
      <section id="sidenotes-right"></section>
    </aside>

    <footer role="contentinfo">
      Site generated by
      <a href="https://gulpjs.com">gulp</a>
    </footer>
    <script async src="/{{ file.data.assets['js/scripts.js'] }}"></script>
  </body>
